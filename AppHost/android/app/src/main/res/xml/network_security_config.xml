<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Permitir cleartext traffic para desenvolvimento e teste -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Localhost para emulador e desenvolvimento -->
        <domain includeSubdomains="true">localhost</domain>
        <!-- IP localhost -->
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- IP do emulador Android para acessar host -->
        <domain includeSubdomains="true">10.0.2.2</domain>
        <!-- Range de IPs locais comuns -->
        <domain includeSubdomains="true">192.168.1.0</domain>
        <domain includeSubdomains="true">192.168.0.0</domain>
        <domain includeSubdomains="true">172.16.0.0</domain>
    </domain-config>
    
    <!-- Para produção, você pode ser mais restritivo -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>
